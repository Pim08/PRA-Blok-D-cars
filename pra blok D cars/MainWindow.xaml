<Window x:Class="WheelyGoodCars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wheely Good Cars" Height="450" Width="800">

    <Window.Resources>
        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2c3e50"/>
            <Setter Property="BorderBrush" Value="#3498db"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.5" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.7" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl Style -->
        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#34495e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderBrush" Value="#16a085"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- TabItem Style -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#1abc9c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#16a085"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1a242f">
        <TabControl Style="{StaticResource TabControlStyle}">
            <!-- Tab voor Auto toevoegen -->
            <TabItem Header="Auto Toevoegen" Style="{StaticResource TabItemStyle}">
                <Grid Background="#1a242f">
                    <StackPanel x:Name="Step1" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Vul het kenteken in" FontSize="18" Foreground="White"/>
                        <TextBox x:Name="LicensePlateTextBox" Width="300" Height="40" Margin="10"/>
                        <Button Content="Volgende" Click="NextStep_Click" Width="200"/>
                    </StackPanel>

                    <StackPanel x:Name="Step2" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Gegevens controleren en prijs invullen" FontSize="18" Foreground="White" Margin="0 0 0 20"/>

                        <!-- Merk -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
                            <TextBlock Text="Merk:" Width="100" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                            <TextBox x:Name="BrandTextBox" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>

                        <!-- Model -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
                            <TextBlock Text="Model:" Width="100" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                            <TextBox x:Name="ModelTextBox" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>

                        <!-- Prijs -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
                            <TextBlock Text="Prijs:" Width="100" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                            <TextBox x:Name="PriceTextBox" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                        <!-- Afbeelding selecteren -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
                            <TextBlock Text="Foto:" Width="100" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                            <Button Content="Selecteer Afbeelding" Click="UploadImageButton_Click" />
                            <TextBlock x:Name="SelectedImageTextBlock" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
                            <Button Content="Vorige" Click="PreviousStep_Click" Width="100" Margin="10"/>
                            <Button Content="Volgende" Click="NextStep_Click" Width="100" Margin="10"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel x:Name="Step3" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Vul een beschrijving in" FontSize="18" Foreground="White" Margin="0 0 0 20"/>

                        <!-- Beschrijving -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
                            <TextBlock Text="Beschrijving:" Width="100" FontSize="16" VerticalAlignment="Top" Foreground="White"/>
                            <TextBox x:Name="DescriptionTextBox" Style="{StaticResource TextBoxStyle}" Height="80"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
                            <Button Content="Vorige" Click="PreviousStep_Click" Width="100" Margin="10"/>
                            <Button Content="Auto Toevoegen" Click="AddCarButton_Click" Width="200" Margin="10"/>
                        </StackPanel>
                        <!-- Afbeelding Uploaden -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
                            <TextBlock Text="Afbeelding:" Width="100" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                            <Button Content="Upload Afbeelding" Click="UploadImageButton_Click" Width="200"/>
                        </StackPanel>


                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab voor Auto's Overzicht -->
            <TabItem Header="Overzicht van Auto's" Style="{StaticResource TabItemStyle}">
                <ListView x:Name="CarsListView" Margin="10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Kenteken" DisplayMemberBinding="{Binding LicensePlate}" Width="100"/>
                            <GridViewColumn Header="Merk" DisplayMemberBinding="{Binding Brand}" Width="100"/>
                            <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="100"/>
                            <GridViewColumn Header="Prijs" DisplayMemberBinding="{Binding Price}" Width="100"/>
                            <GridViewColumn Header="Beschrijving" DisplayMemberBinding="{Binding Description}" Width="200"/>
                            <GridViewColumn Header="Afbeelding" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding ImagePath}" Width="80" Height="50"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <!-- Tab voor Auto Verwijderen -->
            <TabItem Header="Auto Verwijderen"  Style="{StaticResource TabItemStyle}">
                <StackPanel Margin="10">
                    <TextBlock Text="Geef de ID van de te verwijderen auto in" Margin="5" FontSize="18" Foreground="White"/>
                    <TextBox x:Name="CarIdToDeleteTextBox" Style="{StaticResource TextBoxStyle}"/>
                    <Button x:Name="DeleteCarButton" Content="Verwijder auto" Style="{StaticResource ButtonStyle}" Click="DeleteCarButton_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
